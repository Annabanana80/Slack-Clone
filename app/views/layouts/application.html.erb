<!DOCTYPE html>
<html>
  <head>
    <title>Genericslack</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Navbar goes here -->
  <div class="navbar-fixed">
    <nav class="cyan accent-4">
	    <div class="nav-wrapper">
	      <%= link_to root_path, class: "brand-logo" do %>
		      	Totally Not Slack
		   <% end %>
	      <ul class="right hide-on-med-and-down">
	      	<%if user_signed_in? %>
            <%= yield :right_nav %>
                <li><%= current_user.image%></li>
                <li><a materialize="dropdown" class="dropdown-trigger" href="#" data-activates="dropdown1"><%= current_user.username %><i class="material-icons right">arrow_drop_down</i></a></li>
                <ul id="dropdown1" class="dropdown-content">
                  <li><%= link_to "Settings", edit_user_registration_path %></li>
                  
                  <li class="divider"></li>
                  <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                </ul>
                
                
          <%else%>  
	              <li><%= link_to "Sign Up", new_user_registration_path %></li>
	              <li><%= link_to "Login", new_user_session_path %></li>
          <% end %>
	      </ul>
	    </div>
    </nav>
  </div>  
    <!-- Page Layout here -->
    <div>
      <div class="row">
        <div class="col s3" style="position: fixed;">
          <% if user_signed_in? %>
            <h5>My Channels</h5>
            <ul>
                <% current_user.chatchannels.public_channels.each do |chatchannel| %>
                <li><%= link_to chatchannel.name, chatchannel, data: {behavior: "chatchannel-link", chatchannel_id: chatchannel.id} %></li>
              <% end %>
            </ul>
            <%else%>
            <h5>Sign up or Login to See Your Channels</h5>
          <% end %>
          
          <%if user_signed_in? %>
          <h5>Who's Online</h5>
          <ul>
            <% (User.all - [current_user]).each do |user| %>
            <li><%= link_to user.username, direct_message_path(user.id), data: {behavior: "chatchannel-link", chatchannel_id: Chatchannel.direct_message_for_users([current_user, user]).id } %></li>
            <%end%>
          </ul>
          <% else %>
          <h5>Sign in or sign up to see who's online</h5>
          <% end %>
        </div>
        <div class="col s9 push-s3">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>