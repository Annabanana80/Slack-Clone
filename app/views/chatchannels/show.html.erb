<p id="notice"><%= notice %></p>

<h4>
  <strong>Current Channel:</strong>  
</h4>
<h5><%= @chatchannel.name %></h5>
<% unread_messages = false %>
<div data-behavior='messages' data-chatchannel-id='<%= @chatchannel.id %>' style="margin-bottom: 80px;">
	  <% @messages.each do |message| %>
    <% if !unread_messages && @chatchannel_user.last_read_at < message.created_at %>
      <% unread_messages = true %>
      <span class="unread">Unread Messages</span>
    <% end %>
	
		<%= render message%>
	<% end %>
</div>
<div class="footer">
  
  <%= form_for [@chatchannel, Message.new] do |f|%>
  	<%= f.text_area :body, class: "form-control", autofocus: true%>
  <% end %>
